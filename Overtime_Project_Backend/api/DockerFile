# -----------------------------
# Stage 1: Build
# -----------------------------
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Instalar librerías nativas CRÍTICAS para SkiaSharp
RUN apt-get update && apt-get install -y \
    libfontconfig1 \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copiar proyecto y restaurar dependencias
COPY . .
RUN dotnet restore "./Overtime_Project_Backend.csproj"

# Publicar la app
RUN dotnet publish "./Overtime_Project_Backend.csproj" \
    -c Release -o /app/publish /p:TreatWarningsAsErrors=false

# -----------------------------
# Stage 2: Runtime
# -----------------------------
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app

# Instalar librerías CRÍTICAS para SkiaSharp en runtime
RUN apt-get update && apt-get install -y \
    libfontconfig1 \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copiar la app publicada desde el stage de build
COPY --from=build /app/publish .

# Puerto expuesto y entrypoint
EXPOSE 8080
ENTRYPOINT ["dotnet", "Overtime_Project_Backend.dll"]