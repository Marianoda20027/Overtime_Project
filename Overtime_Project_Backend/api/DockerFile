# Imagen base con .NET SDK para compilar
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copia todo y restaura dependencias
COPY . .
RUN dotnet restore "./Overtime_Project_Backend.csproj"
RUN dotnet publish "./Overtime_Project_Backend.csproj" -c Release -o /app/publish

# Imagen final con solo el runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
COPY --from=build /app/publish .
EXPOSE 8080
ENTRYPOINT ["dotnet", "Overtime_Project_Backend.dll"]
